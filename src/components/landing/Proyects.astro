---
import { proyects } from "../../config/proyects.json";
---

<h1 class="font-bold text-5xl my-5 text-center">Proyects</h1>
{
  proyects.map((proyect) => (
    <div class="flex text-center flex-col md:flex-row md:text-left my-8">
      <div class="flex-1 p-4">
        <h2 class=" font-bold text-2xl my-4">{proyect.title}</h2>
        <p>{proyect.Descripcion}</p>
        <button class=" bg-indigo-600 px-3 py-2 mt-3 hover:bg-indigo-500">More info</button>
      </div>
      <div class="flex-1">
        <img src={proyect.image} alt="" class="w-72 m-auto"/>
      </div>
    </div>
  ))
}
